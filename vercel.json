{
  "build": {
    "env": {
      "CARGO_HOME": "/vercel/.cargo",
      "RUSTUP_HOME": "/vercel/.rustup"
    }
  },
  "functions": {
    "api/index.rs": { "runtime": "vercel-rust@4.0.0" },
    "api/page.rs": { "runtime": "vercel-rust@4.0.0" },
    "api/static.rs": { "runtime": "vercel-rust@4.0.0" }
  },
  "rewrites": [
    { "source": "/", "destination": "/api/index" },
    { "source": "/g/:id/:slug*", "destination": "/api/page?id=:id" },
    { "source": "/static/:path*", "destination": "/api/static/:path" }
  ]
}
